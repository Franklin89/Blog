@model MLSoftware.Web.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        @foreach (var item in Model.Posts)
            {
            <div class="post-preview">
                <a asp-controller="Post" asp-action="Details" asp-route-id="@item.Id">
                    <h2 class="post-title">
                        @item.Title
                    </h2>
                    <h3 class="post-subtitle">
                        @item.Description
                    </h3>
                </a>
                <p class="post-meta">Posted by @item.Author on @item.Published?.ToString("MMMM dd, yyyy hh:mm tt")</p>
            </div>
                @if (item != Model.Posts.Last())
                {
                    <hr>
                }
        }
    </div>
</div>
